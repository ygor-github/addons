<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.livechat.n8n</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_livechat.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="livechat_settings" position="after">
                <h2>N8N Connector</h2>
                <div class="row mt16 o_settings_container" id="n8n_connector_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="n8n_webhook_url" class="o_light_label"/>
                            <div class="text-muted">
                                Enter the N8N webhook URL to receive livechat messages.
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="n8n_webhook_url" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
